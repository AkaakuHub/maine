{
  "compilerOptions": {
    "target": "es2023",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@maine/shared-types": ["shared/types/src/index.ts"],
      "@maine/shared-types/*": ["shared/types/src/*"],
      "@maine/shared-utils": ["shared/utils/src/index.ts"],
      "@maine/shared-utils/*": ["shared/utils/src/*"]
    },
    "incremental": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "declaration": true,
    "declarationMap": true
  },
  "exclude": ["node_modules", "dist"]
}