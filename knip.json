{
  "ignore": [
    "**/*.d.ts",
    "**/fixtures",
    "**/prisma/generated/**",
    "**/node_modules/**",
    "**/frontend/public/**",
    "**/webpack.config.js",
    "**/dist/**",
    "**/.next/**",
    "knip.json",
    "packages/apps/vr-cpp/**",
    "packages/apps/vr-unity/**"
  ],
  "workspaces": {
    "packages/apps/backend": {
      "entry": ["src/main.ts"],
      "project": ["src/**/*.ts*"]
    },
    "packages/apps/frontend": {
      "entry": ["src/app/globals.css"],
      "project": ["src/**/*.ts*"]
    },
    "packages/libs": {
      "project": ["src/**/*.ts*"]
    }
  },
  "ignoreDependencies": ["ts-loader", "webpack"],
  "includeEntryExports": true
}