{
  "ignore": [
    "**/*.d.ts",
    "**/fixtures",
    "**/prisma/generated/**",
    "**/node_modules/**",
    "**/frontend/public/**",
    "**/webpack.config.js",
    "**/dist/**",
    "**/.next/**",
    "knip.json",
    "packages/vr-cpp/**"
  ],
  "workspaces": {
    "packages/backend": {
      "entry": ["src/main.ts"],
      "project": ["src/**/*.ts*"]
    },
    "packages/frontend": {
      "entry": ["src/app/globals.css", "src/app/layout.tsx"],
      "project": ["src/**/*.ts*"]
    }
  },
  "ignoreDependencies": ["tailwindcss"]
}