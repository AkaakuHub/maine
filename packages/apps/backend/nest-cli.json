{
	"$schema": "https://json.schemastore.org/nest-cli",
	"collection": "@nestjs/schematics",
	"sourceRoot": "src",
	"monorepo": true,
	"compilerOptions": {
		"deleteOutDir": true,
		"tsConfigPath": "tsconfig.json",
		"builder": "webpack",
		"webpackConfigPath": "./webpack.config.js"
	},
	"projects": {
		"backend": {
			"type": "application",
			"root": ".",
			"entryFile": "src/main",
			"sourceRoot": "src",
			"compilerOptions": {
				"deleteOutDir": true,
				"tsConfigPath": "tsconfig.json",
				"builder": "webpack",
				"webpackConfigPath": "./webpack.config.js"
			}
		}
	}
}
