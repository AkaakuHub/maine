{
	"$schema": "https://json.schemastore.org/package.json",
	"name": "my-video-storage",
	"version": "0.1.0",
	"private": true,
	"workspaces": [
		"packages/*",
		"shared/*"
	],
	"scripts": {
		"dev": "pnpm --filter @my-video-storage/frontend dev",
		"dev:backend": "pnpm build:shared && pnpm --filter @my-video-storage/backend start:dev",
		"build": "pnpm build:shared && pnpm --filter @my-video-storage/frontend build",
		"build:shared": "pnpm --filter '@my-video-storage/shared-*' run build",
		"build:backend": "pnpm build:shared && pnpm --filter @my-video-storage/backend build",
		"start": "pnpm --filter @my-video-storage/frontend start",
		"start:backend": "pnpm build:shared && pnpm --filter @my-video-storage/backend start:prod",
		"lint": "pnpm -r lint",
		"knip": "knip --fix --files",
		"format": "pnpm -r format",
		"typecheck": "pnpm -r typecheck"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"knip": "^5.60.2",
		"lefthook": "^1.11.13",
		"typescript": "^5.8.3"
	},
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=8.0.0"
	},
	"packageManager": "pnpm@8.15.6"
}
