{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [
			"node_modules/**",
			"dist/**",
			"build/**",
			".next/**",
			"*.min.js",
			"*.d.ts"
		]
	},
	"overrides": [
		{
			"include": [
				"**/*.controller.ts",
				"**/*.service.ts",
				"**/*.module.ts",
				"**/*.guard.ts",
				"**/*.interceptor.ts",
				"**/*.pipe.ts",
				"**/*.filter.ts"
			],
			"linter": {
				"rules": {
					"style": {
						"useImportType": "off",
						"useExportType": "off"
					}
				}
			}
		}
	],
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useImportType": "error",
				"useExportType": "error"
			},
			"correctness": {
				"noUnusedVariables": {
					"level": "error",
					"fix": "safe"
				},
				"noUnusedImports": {
					"level": "error",
					"fix": "safe"
				}
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		},
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		}
	}
}